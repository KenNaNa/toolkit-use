{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true, /* 生成相应的 '.d.ts' file. */
    "declarationDir": "./dist/types", /* 类型声明文件输出目录 */
    "emitDeclarationOnly": true, /* 只生成声明文件，不生成 js 文件*/
    "rootDir": "./src", /* 指定输出文件目录（用于输出），用于控制输出目录结构 */
  }
}